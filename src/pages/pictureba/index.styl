@charset "UTF-8";

/*加载公共样式*/
@import '../../style/common/phone/_common.styl';

html,body,.content-box {
	height: 100%;
}

.content-box {
	overflow-y: auto;
}

.index-main {
	width: 9.6rem;
	margin: 0 auto;
	
}

.item-block {
	width: 100%;
	margin-top: 0.2rem;
	display: flex;
	justify-content:space-between;
}

.big-item {
	width: 6.3rem;
	height: 6.4rem;
}

.small-item {
	width: 3.2rem;
	height: 6.4rem;
}

.img-box {
	width: 100%;
	height: 100%;
	overflow: hidden;
	background-color: #eee;
	display: flex;
	justify-content:center;
	align-items:center;
	&>img {
		width: 100%;
	}
}

.lit-item {
	width: 3.2rem;
	height: 3.15rem;
}

.mt {
	margin-top: 0.1rem;
}

.more-block {
	width: 9.6rem;
	margin: 0.2rem auto;
	&>.more-btn {
		display: block;
		color: #0a77fd;
		font-size: 0.4rem;
		height: 1rem;
		line-height: 1rem;
		text-align: center;
		border-radius: 0.1rem;
		border: #0a77fd solid 0.02rem;
		text-decoration:none;
	}
}

.img-pop {
	width:100%;
	height: 100%;
	position: fixed;
	top: 0;
	left: 0;
	z-index: 101;
	&>.img-main {
		width: 9.6rem;
		height: 100%;
		overflow-y: auto;
		display: flex;
		//justify-content:center;
		align-items:center;
		margin: 0 auto;
		&>img {
			width: 100%;
		}
	}
}