@charset "UTF-8";

/*加载公共样式*/
@import '../../style/common/phone/_common.styl';

html,body ,.content-box{
	height: 100%;
}

.index-main {
	height: 100%;

	display: flex;
	flex-direction: column;
}
.top-bar {
	border-bottom: 1px solid #CCCCCC;
		
	&>p {
		line-height: 1rem;
	}
}
.msg-content {
		box-sizing: border-box;
		overflow-y: auto;
		flex: 1;

		&>.weui-cell {
			box-align: start;
	    	align-items: flex-start;
		}
		&>.weui-cell:before {
			border: none;
		}
		.head-img {
			&>img {
				width: 1rem;
				height: 1rem;
				border-radius: .2rem;
			}
			
		}
		.hl {
			padding-right: .2rem;
		}
		.hr {
			padding-left: .2rem;
		}

		.bubble {
			max-width: 60%;
			min-height: .5rem;
			line-height: .5rem;
			position: relative;
			border-radius: .1rem;
			padding: .1rem .2rem;
			color: #232323;
		}
		.bubble::before{
			content: '';
			width: .2rem;
			height: .2rem;
			position: absolute;
			top: .25rem;
			transform: rotate(45deg);
		}
		.others {
			background-color: #fff;
			border: 1px solid #ededed;
		}
		.others::before {
			background-color: #fff;
	 		border: 1px #ededed;
			left: -0.1rem;
			border-style: none none solid solid;
		}
		.self {
			background-color: #9eea6a;
			border: 1px solid #9eea6a;
		}
		.self::before {
			background-color: #9eea6a;
	 		border: 1px #9eea6a;
			right: -0.1rem;
			border-style: solid solid none none;
		}
}
.input-bar {
		width: 100%;
		//height:1rem;
		//position: fixed;
		//bottom: 0;
		//left: 0;
		border-top: #ccc solid 1px;
		#msg-val {
			height: .85rem;
		}
		#send-btn {
			&>a {
				font-size: .35rem;
			}
		}
}