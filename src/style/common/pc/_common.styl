html,body {
	padding: 0;
	margin: 0;
	height: 100%
}

/*清除浮动*/
.cl:after {
	content: " ";
	display: block;
	height: 0;
	clear: both;
	visibility: hidden;
} 
.cl {
	zoom: 1;
}
.clear {
	clear:both;
	display:inline;
}

/*显示隐藏*/
.show{display:block;} 
.hide{display:none;}

/*左右浮动*/
.fl,.z{float:left;}
.fr,.y{float:right;}

/*字体抗锯齿*/
.thin {
	-webkit-font-smoothing: antialiased;
	-moz-osx-font-smoothing: grayscale;
}

/*单行文字超出显示省略号*/
.ell {
	overflow:hidden;
	word-wrap:normal;
	white-space:nowrap;
	text-overflow:ellipsis;
	word-break:keep-all;
	-ms-text-overflow:ellipsis;
}

