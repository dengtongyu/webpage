@import '../../lib/phone/animate.styl';

$close='data:image/png;base64,';

/*遮罩*/
.pop-mark {
	width:100%;
	height: 100%;
	position: fixed;
	top: 0;
	left: 0;
	z-index: 100;
	opacity: .4;
	background-color: #000;
}

.dialog-pop {
	position: fixed;
	box-sizing:border-box;
	background-color: #fff;
	border-radius: transformRem(6);
	padding: transformRem(50) transformRem(30) transformRem(30);
	color: #777;
	left: 50%;
	top: 50%;
	text-align: center;
	max-width: 90%;
	margin-left: -40%;
	z-index: 101;
	box-shadow: #666 0 0 transformRem(60);
	&>.dialog-content {
		line-height: transformRem(40);
		font-size: transformRem(30);
	}
	&>.dialog-btn {
		padding-top: transformRem(50);
		&>button {
			width: transformRem(160);
			height: transformRem(60);
			box-sizing:border-box;
			background-color: #0fadf2;
			border-radius: transformRem(10);
			color: #fff;
			font-size: transformRem(30);
			border: none;
			&:active {
				background-color: #0c96f9;
			}
		}
		&>.dialog-no {
			margin-right: transformRem(10);
		}
	}
	&>.dialog-close {
		width: transformRem(60);
		height: transformRem(60);
		position: absolute;
		right: transformRem(-20);
		top: transformRem(-20);
		border-radius: transformRem(30);
		color: #fff;
		border: none;
		font-size: transformRem(40);
		background-repeat: no-repeat;
		background-size: 100% 100%;
		background-position: center;
		background-color: #3c3c3c;
		background-image: url($close);
		&:active {
			background-color: #d24445;
		}
	}
}
